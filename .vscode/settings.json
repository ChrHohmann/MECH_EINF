{
    // Interpreter für Python-Code (Run/Debug/Tests)
    "python.defaultInterpreterPath": "/opt/.venvs/MECH_LAB/bin/python",

    // Standard-Terminalprofil für Linux (Bash mit venv-Aktivierung)
    "terminal.integrated.profiles.linux": {
        "bash (mit venv)": {
            "path": "bash",
            "args": [
                "--rcfile",
                "${env:HOME}/.bashrc_with_venv"
            ]
        }
    },

    // Dieses Profil als Standard setzen
    "terminal.integrated.defaultProfile.linux": "bash (mit venv)"
}
